@using SOL_LUIS_ROJAS.WEB.ViewModels;
@model List<UserViewModel>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>DNI</th>
                <th>Nombres Usuario</th>
                <th>Apellidos Usuario</th>
                <th>Rol</th>
                <th>Email</th>
                <th>Telefóno</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DNI</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Role</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@(item.Status ? "Habilitado" : "Sancionado")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>No se encontraron usuarios registrados.</h3>
}