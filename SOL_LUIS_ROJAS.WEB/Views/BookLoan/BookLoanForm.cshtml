@using SOL_LUIS_ROJAS.WEB.ViewModels 
@model BookLoanViewModel
@{
    ViewBag.Title = "BookLoanForm";
}

<h2>@(Model.Id.HasValue ? "Editar" : "Nuevo") Préstamo</h2>

<form method="post">
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        <label>Fecha de Préstamo</label>
        @*@Html.LabelFor(x => x.LoanDate, new { @class = "label" })*@
        @Html.TextBoxFor(x => x.LoanDate, new { @class = "form-control", type = "date", placeholder = "Fecha de Préstamo", required = "required", autocomplete = "off", @value = Model.LoanDate.ToString("dd/MM/yyyy") })
    </div>

    <div class="form-group">
        <label>Libro</label>
        @*@Html.LabelFor(x => x.BookId, new { @class = "label" })*@
        @Html.DropDownListFor(x => x.BookId, Model.Books.Items as List<SelectListItem>, "Selecciona un libro", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Usuario</label>
        @*@Html.LabelFor(x => x.UserId, new { @class = "label" })*@
        @Html.DropDownListFor(x => x.UserId, Model.Users.Items as List<SelectListItem>, "Selecciona un usuario", new { @class = "form-control" })
    </div>    
    
    <div class="form-group">
        <label>Tipo</label>
        @*@Html.LabelFor(x => x.LoanPurpose, new { @class = "label" })*@
        @Html.DropDownListFor(x => x.LoanPurpose, Model.LoanPurposes.Items as List<SelectListItem>, "Selecciona un tipo", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Fecha de Devolución</label>
        @*@Html.LabelFor(x => x.ReturnDate, new { @class = "label" })*@
        @Html.TextBoxFor(x => x.ReturnDate, new { @class = "form-control", type = "date", placeholder = "Fecha de Devolución", required = "required", autocomplete = "off" })
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>

</form>